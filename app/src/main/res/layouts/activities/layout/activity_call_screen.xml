<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292A2E"
    tools:context=".activity.CallScreenActivity">
    
    <FrameLayout
        android:id="@+id/localImageCallScreen"
        android:layout_width="140dp"
        android:layout_height="185dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        ></FrameLayout>

    <LinearLayout
        android:id="@+id/imageCallScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameCallScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Tema"
                android:textColor="@color/md_white_1000"
                android:textSize="64dp" />

            <TextView
                android:id="@+id/functionCallScreem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="English - Korean"
                android:textColor="@color/md_white_1000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:src="@drawable/off_voice" />

            <ImageView
                android:id="@+id/cancelCalllBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:src="@drawable/off_call" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:src="@drawable/off_video" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>
